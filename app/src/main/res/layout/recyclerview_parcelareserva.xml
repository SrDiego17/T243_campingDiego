<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- TextView para el nombre de la parcela -->
        <TextView
            android:id="@+id/parcelaTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp" />

        <!-- TextView para el precio de la parcela -->
        <TextView
            android:id="@+id/parcelaPriceTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="16sp"
            android:textColor="@android:color/holo_green_dark"
            android:layout_gravity="center_vertical"
            android:gravity="end"
            android:layout_marginEnd="8dp" />

        <!-- TextView para el número máximo de ocupantes -->
        <TextView
            android:id="@+id/parcelaMaxOcupantesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@android:color/holo_red_dark"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp" />

        <!-- Número de ocupantes (EditText) -->
        <EditText
            android:id="@+id/parcelaNumberEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Nº Personas"
            android:inputType="number"
            android:gravity="center"
            android:layout_gravity="center_vertical" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
