<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Camping">

    <!-- Botón Añadir Parcela -->
    <Button
        android:id="@+id/button_add_parcela"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Añadir Nueva Parcela"
        app:layout_constraintBottom_toTopOf="@id/button_view_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Botón Ver Listado de Parcelas -->
    <Button
        android:id="@+id/button_view_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Ver Listado de Parcelas"
        app:layout_constraintBottom_toTopOf="@id/button_add_reserva"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_add_parcela" />

    <!-- Botón Añadir Reserva -->
    <Button
        android:id="@+id/button_add_reserva"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Añadir Nueva Reserva"
        app:layout_constraintBottom_toTopOf="@id/button_view_reservas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_view_list" />

    <!-- Botón Ver Listado de Reservas -->
    <Button
        android:id="@+id/button_view_reservas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Ver Listado de Reservas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_add_reserva" />

</androidx.constraintlayout.widget.ConstraintLayout>
